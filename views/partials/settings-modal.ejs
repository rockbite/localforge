<!-- Settings Dialog Modal -->
<div id="settings-modal" class="modal">
    <div class="modal-content settings-modal-content">
        <h2>
            <span class="material-icons">settings</span>
            Settings
        </h2>
        
        <div class="settings-tabs">
            <button class="settings-tab-button active" data-tab="models">Models</button>
            <button class="settings-tab-button" data-tab="security">Security</button>
            <button class="settings-tab-button" data-tab="web">Web Integration</button>
            <button class="settings-tab-button" data-tab="ui">Appearance</button>
            <button class="settings-tab-button" data-tab="agents">Agents</button>
            <button class="settings-tab-button" data-tab="mcp">MCP</button>
            <button class="settings-tab-button" data-tab="export">Export</button>
        </div>

        <%- include('settings/models-tab') %>
        <%- include('settings/security-tab') %>
        <%- include('settings/web-tab') %>
        <%- include('settings/ui-tab') %>
        <%- include('settings/agents-tab') %>
        <%- include('settings/mcp-tab') %>
        <%- include('settings/export-tab') %>
        
        <div class="modal-footer">
            <button type="button" id="settings-cancel" class="btn secondary">Cancel</button>
            <button type="button" id="settings-save" class="btn primary">Save Changes</button>
        </div>
    </div>
</div>